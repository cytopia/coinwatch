    'invest':    {'width': 10, 'prec':    2, 'head': '$ INVEST'},
    'wealth':    {'width': 10, 'prec':    2, 'head': '$ WEALTH'},
    'profit':    {'width': 12, 'prec':    2, 'head': '$ PROFIT'},
    'percent':   {'width':  7, 'prec':    1, 'head': 'PERCENT'}
}
